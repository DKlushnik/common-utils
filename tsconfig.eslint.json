{
  "compilerOptions": {
    "outDir": "./lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
       "common/*": ["./*"]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
  ],
}
